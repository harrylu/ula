<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="/" extends="global" namespace="/">
		<action name="entry" class="ula.action.IndexAction" method="entry">
			<result name="success">/index.ftl</result>
		</action>
		<action name="subscribe" class="ula.action.IndexAction" method="subscribe">
			<result name="subscribe" type="jsonResult" />
		</action>
		<action name="cancelSubscribe" class="ula.action.IndexAction"
			method="cancelSubscribe">
			<result name="cancelSubscribe" type="jsonResult" />
		</action>
		<action name="language" class="ula.action.IndexAction" method="language">
			<result name="success" type="redirect">/entry.action</result>
		</action>
	</package>
</struts>
