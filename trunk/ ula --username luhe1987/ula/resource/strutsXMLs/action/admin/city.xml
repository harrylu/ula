<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="admin-city" extends="global" namespace="/admin/city">

		<!-- 选择封面图片，保留 -->
		<action name="selectCoverLink" class="ula.action.admin.city.TourAction"
			method="selectCoverLink">
			<result name="selectCoverLink">coverlink.ftl</result>
		</action>

		<!-- 关于大连:城市信息 -->
		<action name="cityAdmin" class="ula.action.admin.city.CityAction"
			method="cityAdmin">
			<result name="cityAdmin">city_admin.ftl</result>
		</action>
		<action name="city" class="ula.action.admin.city.CityAction">
			<result name="preUpdate">city_info.ftl</result>
		</action>

		<!-- 关于大连:景点公园 -->
		<action name="tourAdmin" class="ula.action.admin.city.TourAction"
			method="tourAdmin">
			<result name="tourAdmin">tour_admin.ftl</result>
		</action>
		<action name="tour" class="ula.action.admin.city.TourAction">
			<result name="preUpdate">tour_info.ftl</result>
		</action>


		<!-- 关于大连:大连美食 -->
		<action name="foodAdmin" class="ula.action.admin.city.FoodAction"
			method="foodAdmin">
			<result name="foodAdmin">food_admin.ftl</result>
		</action>
		<action name="food" class="ula.action.admin.city.FoodAction">
			<result name="preUpdate">food_info.ftl</result>
		</action>

		<!-- 关于大连:大连居住 -->
		<action name="housingAdmin" class="ula.action.admin.city.HousingAction"
			method="housingAdmin">
			<result name="housingAdmin">housing_admin.ftl</result>
		</action>
		<action name="housing" class="ula.action.admin.city.HousingAction">
			<result name="preUpdate">housing_info.ftl</result>
		</action>

		<!-- 关于大连:大连购物 -->
		<action name="shoppingAdmin" class="ula.action.admin.city.ShoppingAction"
			method="shoppingAdmin">
			<result name="shoppingAdmin">shopping_admin.ftl</result>
		</action>
		<action name="shopping" class="ula.action.admin.city.ShoppingAction"
			method="shopping">
			<result name="preUpdate">shopping_info.ftl</result>
		</action>

		<!-- 关于大连:大连交通 -->
		<action name="transportationAdmin" class="ula.action.admin.city.TransportationAction"
			method="transportationAdmin">
			<result name="transportationAdmin">transportation_admin.ftl</result>
		</action>
		<action name="transportation" class="ula.action.admin.city.TransportationAction"
			method="transportation">
			<result name="preUpdate">transportation_info.ftl</result>
		</action>

		<!-- 关于大连:大连治疗 -->
		<action name="therapyAdmin" class="ula.action.admin.city.TherapyAction"
			method="therapyAdmin">
			<result name="therapyAdmin">therapy_admin.ftl</result>
		</action>
		<action name="therapy" class="ula.action.admin.city.TherapyAction">
			<result name="preUpdate">therapy_info.ftl</result>
		</action>

		<!-- 关于大连:大连节日 -->
		<action name="festivalAdmin" class="ula.action.admin.city.FestivalAction"
			method="festivalAdmin">
			<result name="festivalAdmin">festival_admin.ftl</result>
		</action>
		<action name="festival" class="ula.action.admin.city.FestivalAction">
			<result name="preUpdate">festival_info.ftl</result>
		</action>

		<!-- 关于大连:展会信息 -->
		<action name="exhibitionAdmin" class="ula.action.admin.city.ExhibitionAction"
			method="exhibitionAdmin">
			<result name="exhibitionAdmin">exhibition_admin.ftl</result>
		</action>
		<action name="exhibition" class="ula.action.admin.city.ExhibitionAction">
			<result name="preUpdate">exhibition_info.ftl</result>
		</action>
	</package>
</struts>